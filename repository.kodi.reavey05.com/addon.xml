<?xml version="1.0" encoding="UTF-8"?>
<addon id="repository.kodi.reavey05.com"
        name="KODI Repository @ reavey05.com"
        version="0.1.5"
        provider-name="Brian Reavey">

    <extension point="xbmc.addon.repository">
    <dir>
        <info>{{INFO_URL}}</info>
        <checksum>{{CHECKSUM_URL}}</checksum>
        <datadir>{{DATADIR_URL}}</datadir>
        <hashes>sha256</hashes>
    </dir>
    </extension>

    <extension point="xbmc.addon.metadata">
        <summary>KODI Repository @ reavey05.com</summary>
        <description>A repository of add-ons developed for a personal Kodi system</description>
        <disclaimer></disclaimer>
        <news>0.1.5 - Working on a separate install path for branches</news>
        <platform>all</platform>
        <language></language>
        <license>GNU GENERAL PUBLIC LICENSE, Version 3, 29 June 2007</license>
        <website>{{DATADIR_URL}}</website>
        <source>https://github.com/brianpatrickreavey/repository.kodi.reavey05.com</source>
        <email>brian at reavey05 dot com</email>
    </extension>
</addon>